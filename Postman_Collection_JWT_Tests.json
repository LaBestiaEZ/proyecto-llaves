{
	"info": {
		"name": "Proyecto Llaves - JWT API",
		"description": "Colección de pruebas para autenticación JWT y endpoints protegidos",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
	},
	"item": [
		{
			"name": "1. Login - Obtener Token JWT",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"// Guardar el token automáticamente en variable de entorno",
							"if (pm.response.code === 200) {",
							"    var jsonData = pm.response.json();",
							"    pm.environment.set(\"jwt_token\", jsonData.token);",
							"    console.log(\"Token guardado: \" + jsonData.token);",
							"}",
							"",
							"// Verificar respuesta exitosa",
							"pm.test(\"Status code is 200\", function () {",
							"    pm.response.to.have.status(200);",
							"});",
							"",
							"pm.test(\"Response has token\", function () {",
							"    var jsonData = pm.response.json();",
							"    pm.expect(jsonData).to.have.property('token');",
							"});"
						],
						"type": "text/javascript"
					}
				}
			],
			"request": {
				"method": "POST",
				"header": [
					{
						"key": "Content-Type",
						"value": "application/json"
					}
				],
				"body": {
					"mode": "raw",
					"raw": "{\n    \"username\": \"admin@llaves.com\",\n    \"password\": \"test123\"\n}"
				},
				"url": {
					"raw": "http://localhost:8080/api/login_check",
					"protocol": "http",
					"host": [
						"localhost"
					],
					"port": "8080",
					"path": [
						"api",
						"login_check"
					]
				},
				"description": "Login con usuario de prueba. El token JWT se guarda automáticamente en la variable de entorno."
			},
			"response": []
		},
		{
			"name": "2. API Entrypoint - Con Token",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"pm.test(\"Status code is 200\", function () {",
							"    pm.response.to.have.status(200);",
							"});",
							"",
							"pm.test(\"Response has @context\", function () {",
							"    var jsonData = pm.response.json();",
							"    pm.expect(jsonData).to.have.property('@context');",
							"});"
						],
						"type": "text/javascript"
					}
				}
			],
			"request": {
				"auth": {
					"type": "bearer",
					"bearer": [
						{
							"key": "token",
							"value": "{{jwt_token}}",
							"type": "string"
						}
					]
				},
				"method": "GET",
				"header": [],
				"url": {
					"raw": "http://localhost:8080/api",
					"protocol": "http",
					"host": [
						"localhost"
					],
					"port": "8080",
					"path": [
						"api"
					]
				},
				"description": "Acceso al entrypoint de la API usando el token JWT obtenido en el login."
			},
			"response": []
		},
		{
			"name": "3. API Entrypoint - Sin Token (401)",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"pm.test(\"Status code is 401 (Unauthorized)\", function () {",
							"    pm.response.to.have.status(401);",
							"});"
						],
						"type": "text/javascript"
					}
				}
			],
			"request": {
				"method": "GET",
				"header": [],
				"url": {
					"raw": "http://localhost:8080/api",
					"protocol": "http",
					"host": [
						"localhost"
					],
					"port": "8080",
					"path": [
						"api"
					]
				},
				"description": "Prueba de que sin token JWT, el acceso es denegado (401 Unauthorized)."
			},
			"response": []
		},
		{
			"name": "4. Documentación OpenAPI",
			"request": {
				"method": "GET",
				"header": [],
				"url": {
					"raw": "http://localhost:8080/api/docs",
					"protocol": "http",
					"host": [
						"localhost"
					],
					"port": "8080",
					"path": [
						"api",
						"docs"
					]
				},
				"description": "Acceso a la documentación interactiva de la API (Swagger UI)."
			},
			"response": []
		},
		{
			"name": "5. Login - Credenciales Incorrectas (401)",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"pm.test(\"Status code is 401\", function () {",
							"    pm.response.to.have.status(401);",
							"});"
						],
						"type": "text/javascript"
					}
				}
			],
			"request": {
				"method": "POST",
				"header": [
					{
						"key": "Content-Type",
						"value": "application/json"
					}
				],
				"body": {
					"mode": "raw",
					"raw": "{\n    \"username\": \"admin@llaves.com\",\n    \"password\": \"wrongpassword\"\n}"
				},
				"url": {
					"raw": "http://localhost:8080/api/login_check",
					"protocol": "http",
					"host": [
						"localhost"
					],
					"port": "8080",
					"path": [
						"api",
						"login_check"
					]
				},
				"description": "Prueba de login con contraseña incorrecta (debe devolver 401)."
			},
			"response": []
		}
	],
	"variable": [
		{
			"key": "base_url",
			"value": "http://localhost:8080",
			"type": "string"
		}
	]
}
